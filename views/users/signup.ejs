<% layout("layouts/boilerplate") %>
<div class="row mb-3">
    <h3 style="text-align: center; color: #2C3E50;"> SignUp on NextDestination</h3>
    <div class="col-6 offset-3">
        <form method="POST" action="/signup" novalidate class="needs-validation mt-5" enctype="multipart/form-data">
            <div class="mb-3">
                <label for="username" class="form-lable">Username</label>
                <input name="username" type="text" placeholder="Enter Username" class="form-control" required>
                <div class="valid-feedback">Looks good!</div>
                <div class="invalid-feedback">Username should be valid.</div>
            </div>
            <div class="mb-3">
                <label for="email" class="form-lable">Email</label>
                <input name="email" type="email" placeholder="Enter Email" class="form-control" required>
                <div class="valid-feedback">Email Looks good!</div>
                <div class="invalid-feedback">Email should be valid.</div>
            </div>
            <div class="mb-3">
                <label for="password" class="form-lable">Password</label>
                <input name="password" type="password" placeholder="Enter Your Password" class="form-control" required>
                <div class="valid-feedback">Password Looks good!</div>
                <div class="invalid-feedback">Password should be valid.</div>
            </div>
            <div class="mb-3">
                <label for="image" class="form-lable">Upload Profile Picture</label>
                <input name="image" type="file" placeholder="Select Your Image File" class="form-control" required>
            </div>
            <button class="btn btn1 add-btn">SignUp</button>
        </form>
        <hr>
        <p>It you already have account then click log in</p>
        <a href="/login"><button class=" btn btn2">Log In</button></a>
    </div>
</div>